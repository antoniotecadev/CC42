        android:id="@+id/star3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:src="@drawable/baseline_star_border_40"
        app:tint="@color/colorStar" />

    <!-- Estrela 4 -->
    <ImageView
        android:id="@+id/star4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:src="@drawable/baseline_star_border_40"
        app:tint="@color/colorStar" />

    <!-- Estrela 5 -->
    <ImageView
        android:id="@+id/star5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:src="@drawable/baseline_star_border_40"
        app:tint="@color/colorStar" />
</LinearLayout>