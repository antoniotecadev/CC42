<resources>
    <!-- Base application theme. -->
    <style name="Theme.CC42" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/light_white</item>
    </style>

    <!--    Theme Without ActionBar-->
    <style name="ThemeOverlay.CC42.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>

    <!--    Theme of NavigationDrawer -->
    <style name="Theme.CC42.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>