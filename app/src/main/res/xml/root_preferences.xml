<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreferenceCompat
        app:defaultValue="true"
        app:icon="@drawable/ic_baseline_notifications_24"
        app:key="notification_key"
        app:summaryOff="@string/notification_summary_off"
        app:summaryOn="@string/notificatio_summary_on"
        app:title="@string/notificatio_title" />

    <ListPreference
        android:defaultValue="pt-rAO"
        android:entries="@array/language_entries"
        android:entryValues="@array/language_values"
        android:key="language_key"
        android:summary="@string/select_language_app"
        android:title="@string/language"
        app:dialogIcon="@drawable/ic_baseline_translate_24"
        app:icon="@drawable/ic_baseline_translate_24"
        app:useSimpleSummaryProvider="true" />

    <!-- Opção para Modo Claro e Escuro -->
    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="theme_mode_key"
        android:title="@string/dark_mode"
        app:icon="@drawable/baseline_nightlight_24"
        app:summaryOff="@string/theme_mode_summary_on"
        app:summaryOn="@string/theme_mode_summary_off" />

    <!-- Opção para Modo Claro e Escuro -->
    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="meal_time_range_key"
        android:title="@string/meal_time_range"
        app:icon="@drawable/baseline_access_time_filled_24"
        app:summaryOff="@string/meal_time_range_summary_on"
        app:summaryOn="@string/meal_time_range_summary_off" />

    <!-- Pequeno Almoço -->
    <PreferenceCategory
        android:key="breakfast"
        app:title="@string/breakfast">
        <Preference
            android:key="breakfast_start"
            android:summary="@string/set_breakfast_start_time"
            android:title="@string/start_time" />
        <Preference
            android:key="breakfast_end"
            android:summary="@string/set_breakfast_end_time"
            android:title="@string/end_time" />
    </PreferenceCategory>

    <!-- Almoço -->
    <PreferenceCategory
        android:key="lunch"
        app:title="@string/lunch">
        <Preference
            android:key="lunch_start"
            android:summary="@string/set_lunch_start_time"
            android:title="@string/start_time" />
        <Preference
            android:key="lunch_end"
            android:summary="@string/set_lunch_end_time"
            android:title="@string/end_time" />
    </PreferenceCategory>

    <!-- Jantar -->
    <PreferenceCategory
        android:key="dinner"
        app:title="@string/dinner">
        <Preference
            android:key="dinner_start"
            android:summary="@string/set_dinner_start_time"
            android:title="@string/start_time" />
        <Preference
            android:key="dinner_end"
            android:summary="@string/set_dinner_end_time"
            android:title="@string/end_time" />
    </PreferenceCategory>
</PreferenceScreen>