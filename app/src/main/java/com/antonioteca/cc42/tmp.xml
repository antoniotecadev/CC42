<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Cabeçalho -->
        <TextView
            android:id="@+id/card_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Featured"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingBottom="8dp"/>

        <!-- Título -->
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Special title treatment"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:paddingBottom="4dp"/>

        <!-- Texto -->
        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="With supporting text below as a natural lead-in to additional content."
            android:textSize="14sp"
            android:gravity="center"
            android:paddingBottom="12dp"/>

        <ImageView
            android:id="@+id/imageViewMeal"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_restaurant_60" />

        <!-- Botão -->
        <Button
            android:id="@+id/fabGenerateQrCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go somewhere"
            android:layout_gravity="center"
            android:backgroundTint="?attr/colorPrimary"/>

        <!-- Botão -->
        <Button
            android:id="@+id/fabOpenSubscriptionList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go somewhere"
            android:layout_gravity="center"
            android:backgroundTint="?attr/colorPrimary"/>

        <!-- Rodapé -->
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 days ago"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:paddingTop="12dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>